<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/style_borderfield"
    android:elevation="90dp"
    android:orientation="vertical"
    android:padding="16dp"
    >


    //ID Transaksi (Dibuat Tidak Terlihat)
    <TextView
        android:id="@+id/text_transaksi_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    // Jumlah Uang
    <TextView
        android:id="@+id/text_jumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100.000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/colorFontPrimary"/>

    //Baris Kedua - Deskripsi
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        //Text Deskripsi

        <TextView
            android:id="@+id/text_keterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/text_status"
            android:inputType="textCapSentences"
            android:text="membeli pulsa"
            android:textColor="@color/colorFontSecondary"
            android:textSize="14dp"
            android:textStyle="bold" />

        //Label Keluar_Masuk
        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="KELUAR"
            android:textColor="@color/colorKeluar"
            android:textSize="12dp"
            android:textStyle="bold" />

    </RelativeLayout>

    //Baris Ketiga - Tanggal
    <TextView
        android:id="@+id/text_tanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="20 Feb 2017"
        android:textSize="10dp"
        android:textColor="@color/colorFontSecondary"/>


</LinearLayout>